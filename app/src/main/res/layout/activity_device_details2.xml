<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:timePicker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="xxxxxxxxxxxxxxx"
                android:textColor="@color/text_black2"
                android:textSize="@dimen/text_15sp" />
            <!--编号名称，编号状态 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="xxxxxxxxxxxxxxx"
                    android:textColor="@color/text_black2"
                    android:textSize="@dimen/text_15sp" />

                <TextView style="@style/vervial_line" />

                <TextView
                    android:id="@+id/tv_device_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="xxxxxxxxxxxxxxx"
                    android:textColor="@color/text_black2"
                    android:textSize="@dimen/text_15sp" />
            </LinearLayout>
            <!--设备编号，运行时间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_device_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="xxxxxxxxxxxxxxx"
                    android:textColor="@color/text_black2"
                    android:textSize="@dimen/text_15sp" />

                <TextView style="@style/vervial_line" />

                <TextView
                    android:id="@+id/tv_device_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="xxxxxxxxxxxxxxx"
                    android:textColor="@color/text_black2"
                    android:textSize="@dimen/text_15sp" />
            </LinearLayout>
            <!--总收益-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_device_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sssddddddd"
                    android:textColor="@color/text_red"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_device_totla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总收益"
                    android:textColor="@color/text_black2"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--扫码数，投币数，代缴投币数量-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--扫码数-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_device_saoma_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sssddddddd"
                        android:textColor="@color/text_red"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扫码数"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    style="@style/vervial_line"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/blue" />
                <!--投币数-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_device_toubi_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sssddddddd"
                        android:textColor="@color/text_red"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投币数"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    style="@style/vervial_line"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/blue" />
                <!--代缴投币数-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_device_toubi_daijiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sssddddddd"
                        android:textColor="@color/text_red"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投币数"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <!--今日昨日当月-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="@color/text_black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="扫码数"
                    android:textColor="@color/text_black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="投币数"
                    android:textColor="@color/text_black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="代缴投币"
                    android:textColor="@color/text_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/blue_point_shape" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="今日"
                        android:textSize="14sp"
                        android:textColor="@color/text_black3" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="扫码数"
                    android:textColor="@color/text_black3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="投币数"
                    android:textColor="@color/text_black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="代缴投币"
                    android:textColor="@color/text_black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
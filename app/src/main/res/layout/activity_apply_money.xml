<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        style="@style/TitleLayout"
        layout="@layout/view_activity_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_can_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提金额"
                android:textColor="@color/C3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_can_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥ "
                android:textColor="@color/C4"
                android:textSize="18sp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_apply_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_can_apply"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/no_content_shape"
            android:hint="请输入金额"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColorHint="#bfbfbf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_apply_money"
            android:layout_below="@+id/et_apply_money"
            android:layout_marginTop="10dp"
            android:text="注：童乐派代微信收取0.6% 的手续费，最低额度至少1元。" />

        <Button
            android:id="@+id/btn_to_apply"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/C3"
            android:text="马上提现"
            android:textColor="@color/C1"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>